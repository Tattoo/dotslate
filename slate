# My confs

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Resize Bindings
bind right:alt;ctrl;shift       resize +10% +0
bind left:alt;ctrl;shift        resize -10% +0
bind up:alt;ctrl;shift          resize +0   -10%
bind down:alt;ctrl;shift        resize +0   +10%

# Push Bindings
bind right:ctrl;cmd  push right bar-resize:screenSizeX/2
bind left:ctrl;cmd   push left  bar-resize:screenSizeX/2
bind space:ctrl;cmd  corner top-left resize:screenSizeX;screenSizeY
bind 1:ctrl;cmd  corner top-left resize:screenSizeX/2;screenSizeY/2
bind 2:ctrl;cmd  corner top-right resize:screenSizeX/2;screenSizeY/2
bind 3:ctrl;cmd  corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind 4:ctrl;cmd  corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Throw Bindings
bind 1:ctrl;cmd         throw 0 resize
bind 2:ctrl;cmd         throw 1 resize
bind 1:ctrl;alt;cmd     throw 0
bind 2:ctrl;alt;cmd     throw 1

# Window Hints
bind esc:cmd hint
